{
  "name": "@indiebase/accesscontrol",
  "version": "2.2.1",
  "description": "Role and Attribute based Access Control for Node.js",
  "private": true,
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": {
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },
  "files": [
    "index.js",
    "lib",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && mkdirp ./lib && tsc",
    "test": "vitest",
    "cover": "npm run build && jest --coverage --verbose --no-cache",
    "cover!": "jest --coverage --verbose --no-cache",
    "report": "open ./test/.coverage/lcov-report/index.html"
  },
  "repository": {
    "url": "git+https://github.com/indiebase/indiebase.git",
    "directory": "first_party/gadgets",
    "type": "git"
  },
  "keywords": [
    "access",
    "access-control",
    "acl",
    "role",
    "attribute",
    "grant",
    "deny",
    "allow",
    "reject",
    "permission",
    "action",
    "possession",
    "rbac",
    "abac",
    "crud",
    "create",
    "read",
    "update",
    "delete",
    "resource",
    "express",
    "admin",
    "user",
    "glob",
    "wildcard",
    "policy",
    "scope",
    "context"
  ],
  "author": "Onur Yildirim <onur@cutepilot.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onury/accesscontrol/issues"
  },
  "homepage": "https://github.com/onury/accesscontrol#readme",
  "devDependencies": {
    "@types/node": "20.8.10",
    "jest-cli": "22.4.2",
    "ncp": "2.0.0",
    "snyk": "1.122.0",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "dependencies": {
    "core-js-pure": "^3.33.2",
    "notation": "1.3.6"
  }
}
