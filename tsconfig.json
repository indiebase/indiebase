{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "noImplicitOverride": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "package.json",
    "temp"
  ]
}