{
  "name": "indiebase",
  "version": "0.0.2-alpha.0",
  "description": "",
  "author": "Han",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "yarn": ">2.0.0",
    "node": ">=20.0.0",
    "npm": "please-use-yarn",
    "pnpm": "please-use-yarn"
  },
  "scripts": {
    "lint": "yarn workspaces foreach -A run lint",
    "_stack:deploy": "docker stack deploy -c ./docker-compose.yaml indiebase",
    "preset:prod": "docker stack deploy -c ./docker-compose.yaml -c ./docker-compose.production.yaml indiebase",
    "preset:dev": "dotenv -e .env -- _stack:deploy",
    "release": "standard-version",
    "prepare": "husky install",
    "syncpack": "syncpack",
    "mismatches": "syncpack list-mismatches",
    "util:paseto:key": "node ./scripts/paseto.mjs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "@vitest/ui": "1.4.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-cli": "7.4.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "husky": "8.0.3",
    "prettier": "3.2.5",
    "standard-version": "9.3.1",
    "syncpack": "12.3.0",
    "typescript": "5.4.3"
  },
  "workspaces": {
    "packages": [
      "first_party/*",
      "apps/*",
      "apps/first_party/*",
      "apps/packages/*",
      "apps/packages/*",
      "community",
      "pro/*",
      "packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@4.1.1",
  "dependencies": {
    "@deskbtm/gadgets": "workspace:^"
  }
}
