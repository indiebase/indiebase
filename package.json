{
  "name": "letscollab",
  "version": "0.0.2-alpha.0",
  "description": "",
  "author": "Nawbc",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 16.0.0",
    "npm": "please-use-yarn",
    "yarn": ">2.0.0",
    "pnpm": "please-use-yarn"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run prebuild && cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "release": "standard-version",
    "migration:generate": "cross-env NODE_ENV=production typeorm migration:generate -n SchemaMigration",
    "migration:create": "cross-env NODE_ENV=production typeorm migration:create -n SchemaMigration",
    "migration:run": "cross-env NODE_ENV=production ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "cross-env NODE_ENV=production ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "@vercel/ncc": "^0.33.1",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-unused-imports": "^1.1.4",
    "jest": "27.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.0",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.6.3"
  },
  "workspaces": [
    "packages/*",
    "first_party/*",
    "apps/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@nestjs/swagger": "^5.2.1",
    "class-validator": "^0.13.2",
    "fastify-swagger": "^5.1.0"
  }
}
