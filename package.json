{
  "name": "letscollab",
  "version": "0.0.2-alpha.0",
  "description": "",
  "author": "Han",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "yarn": ">2.0.0",
    "node": ">= 16.0.0",
    "npm": "please-use-yarn",
    "pnpm": "please-use-yarn"
  },
  "scripts": {
    "start:gateway": "yarn workspace @letscollab/gateway start",
    "start:auth": "yarn workspace @letscollab/auth start",
    "start:user": "yarn workspace @letscollab/user start",
    "start:msg": "yarn workspace @letscollab/msg start",
    "start:collab": "yarn workspace @letscollab/collab start",
    "lint": "yarn workspaces foreach run lint",
    "stack:prod": "docker stack deploy -c ./docker-compose.yaml -c ./docker-compose.production.yaml letscollab",
    "stack:dev": "docker stack deploy -c ./docker-compose.yaml letscollab",
    "release": "standard-version",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "standard-version": "^9.3.1",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "community",
    "first_party/*",
    "third_party/*",
    "apps/*",
    "pro/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@fastify/cookie": "^8.1.0"
  },
  "resolutions": {
    "cross-env@7.0.3": "patch:cross-env@npm:7.0.3#.yarn/patches/cross-env-npm-7.0.3-96d81820f4.patch"
  }
}
