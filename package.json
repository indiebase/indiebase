{
  "name": "letscollab",
  "version": "0.0.2-alpha.0",
  "description": "",
  "author": "Nawbc",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 16.0.0",
    "npm": "please-use-yarn",
    "yarn": ">2.0.0",
    "pnpm": "please-use-yarn"
  },
  "scripts": {
    "vercel-install": "vercel-submodules --all --token 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 && yarn",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "yarn workspaces foreach run lint",
    "docker:prod": "docker stack deploy -c ./docker-compose.yaml -c ./docker-compose.production.yaml letscollab",
    "docker:dev": "docker stack deploy -c ./docker-compose.yaml letscollab",
    "release": "standard-version",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy:basic": "docker stack deploy -c ./docker-compose.yaml letscollab_basic",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "prettier": "^2.4.0",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.6.3",
    "vercel-submodules": "^1.0.6"
  },
  "workspaces": [
    "packages/*",
    "first_party/*",
    "third_party/*",
    "apps/*",
    "pro/apps/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@fastify/cookie": "^8.1.0"
  }
}