{
  "name": "@letscollab/auth",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "./src/index.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:prod": "npm run ncc && docker build . -t letscollab/service-auth",
    "build:local": "npm run bundle && docker build --build-arg RUNTIME_ENV=local --no-cache -t letscollab/msg:local .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run prebuild && cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node -r tsconfig-paths/register ./src/main.ts",
    "start:dev": "npm run bundle:dev && cross-env NODE_ENV=development node ./dist/index.js",
    "start:debug": "npm run prebuild && cross-env NODE_ENV=development nest start -d -w",
    "start:prod": "node dist/main",
    "bundle": "npm run prebuild && ncc build ./src/main.ts -o dist -m",
    "bundle:dev": "npm run prebuild && ncc build ./src/main.ts -o dist -s",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/express": "^1.1.0",
    "@fastify/helmet": "^8.1.0",
    "@letscollab/helper": "workspace:^",
    "@letscollab/nest-acl": "workspace:^",
    "@letscollab/nest-nacos": "workspace:^",
    "@letscollab/passport": "workspace:^",
    "@letscollab/user": "workspace:^",
    "@liaoliaots/nestjs-redis": "^8.0.0",
    "@nestjs/bull": "^0.5.5",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/microservices": "^8.4.7",
    "@nestjs/platform-fastify": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.1.4",
    "amqp-connection-manager": "^4.1.1",
    "amqplib": "^0.8.0",
    "bull": "^4.8.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "fastify": "^3.29.0",
    "fastify-cookie": "5.6.1",
    "fastify-session": "^5.2.1",
    "fastify-swagger": "^5.2.0",
    "ioredis": "^5.0.4",
    "nanoid": "^3.3.2",
    "nest-authz": "^2.2.0",
    "nest-winston": "^1.6.2",
    "passport": "^0.5.2",
    "passport-cookie": "^1.0.9",
    "passport-github2": "^0.1.12",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.6",
    "winston": "^3.7.2",
    "winston-loki": "^6.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/amqplib": "^0",
    "@types/bull": "^3.15.8",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/passport": "^0",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1",
    "@types/rimraf": "^3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.33.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
