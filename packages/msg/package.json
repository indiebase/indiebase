{
  "name": "@letscollab/service-msg",
  "version": "0.0.1",
  "description": "用于发布邮件，信息，通知等等",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run ncc && docker build . -t letscollab/service-auth",
    "ncc": "npm run prebuild && ncc build ./src/main.ts -o dist -m",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run prebuild && cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node -r tsconfig-paths/register ./src/main.ts",
    "start:debug": "npm run prebuild && cross-env NODE_ENV=development nest start -d -w",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@letscollab/common": "workspace:^",
    "@letscollab/nest-nacos": "workspace:^",
    "@liaoliaots/nestjs-redis": "^8.0.0",
    "@nestjs-modules/mailer": "^1.6.1",
    "@nestjs/common": "^8.2.6",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.2.6",
    "@nestjs/microservices": "^8.2.6",
    "amqp-connection-manager": "^4.1.1",
    "amqplib": "^0.8.0",
    "ioredis": "^5.0.4",
    "nanoid": "^3.3.2",
    "nest-winston": "^1.6.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm-adapter": "^1.4.2",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.6",
    "@types/amqplib": "^0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/rimraf": "^3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
